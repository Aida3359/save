<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HelloActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_frame_layout"
        android:background="@color/black"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_activity_hello_image_view"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:layout_marginTop="@dimen/margin_14x"
                android:src="@drawable/activity_hello_image_view_white"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:src="@drawable/ic_corona"
                />
        </LinearLayout>

    </FrameLayout>

    <TextView
        android:id="@+id/activity_hello_name_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_16x"
        android:layout_marginTop="@dimen/margin_16x"
        android:layout_marginBottom="@dimen/margin_8x"
        android:text="@string/activity_hello_title_user_whats_your_name"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_24sp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/activity_hello_name_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_16x"
        android:layout_marginVertical="@dimen/margin_8x"
        android:background="@drawable/background_edit_text"
        android:hint="@string/activity_hello_title_user_name_hint"
        android:inputType="text"
        android:padding="@dimen/padding_10x"
        />

    <Button
        android:id="@+id/activity_hello_open_hello_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_16x"
        android:layout_marginVertical="@dimen/margin_8x"
        android:background="@drawable/background_button"
        android:enabled="false"
        android:gravity="center"
        android:padding="@dimen/padding_10x"
        android:text="@string/activity_hello_title_continue"
        android:textAllCaps="false"
        android:textColor="@drawable/text_color"
        android:textSize="@dimen/text_size_16sp"
        />
</LinearLayout>